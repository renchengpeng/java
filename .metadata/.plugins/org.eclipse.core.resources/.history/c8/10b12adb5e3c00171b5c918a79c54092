package com.zrgk.test;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;

import org.apache.tools.zip.ZipOutputStream;

public class TestZip {
	
	static ZipOutputStream zops = null;
	static{
		try {
			zops = new ZipOutputStream(new FileOutputStream("F:\\资料\\zipTest.zip"));
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
	}
	
	public static void Zip(File file){
		File[] files = file.listFiles();
		for (File fe : files) {
			if (fe.isDirectory()) {
				Zip(fe);
			}else {
				ZipFile(fe);
			}
		}
	}
	
	public static void ZipFile(File file){
		zops.setEncoding("utf-8");
		System.out.println(file.getPath());
	}
	
	public static void main(String[] args) {
		File file = new File("F:\\资料");
		Zip(file);
	}
}
